{
  "info": {
    "name": "Quasar Backend",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Register",
      "request": {
        "method": "POST",
        "url": "{{baseUrl}}/auth/register",
        "body": {
          "mode": "raw",
          "raw": "{\"first_name\":\"John\",\"last_name\":\"Doe\",\"email\":\"john@example.com\",\"password\":\"pass123\",\"phone\":\"+2349052368651\",\"acceptTerms\":true}",
          "options": { "raw": { "language": "json" } }
        }
      }
    },
    {
      "name": "Login",
      "request": {
        "method": "POST",
        "url": "{{baseUrl}}/auth/login",
        "body": {
          "mode": "raw",
          "raw": "{\"email\":\"john@example.com\",\"password\":\"pass123\"}",
          "options": { "raw": { "language": "json" } }
        }
      }
    },
    {
      "name": "Create Order",
      "request": {
        "method": "POST",
        "url": "{{baseUrl}}/orders",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"items\":[{\"productId\":1,\"quantity\":2,\"price\":99.99},{\"productId\":2,\"quantity\":1,\"price\":49.95}]}",
          "options": { "raw": { "language": "json" } }
        }
      }
    },
    {
      "name": "Get Cart",
      "request": {
        "method": "GET",
        "url": "{{baseUrl}}/cart",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ]
      }
    },
    {
      "name": "Get Products",
      "request": {
        "method": "GET",
        "url": "{{baseUrl}}/products"
      }
    }
  ]
}
